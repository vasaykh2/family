{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": ["./src/*"],
      "@core/*": ["./frontend-widget-core/*"],
      "@resources/*": ["./resources/*"],
      "@assets/*": ["./src/assets/*"],
      "@t/*": ["./src/Templates/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src"]
}
